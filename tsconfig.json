{
  "compilerOptions": {
    "outDir": "build/",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": [true]
  }
}
